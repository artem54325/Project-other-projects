@{
    ViewData["Title"] = "Settings";
}
<link rel="stylesheet" href="~/css/settings.css" type="text/css"/>

<div class="title-settings">Settings</div>
<div class="menu-settings">
    <p class="label-settings">Fullname</p>
    <input class="input-settings" type="text" placeholder="Fullname"/>
    <button class="save-settings">Save</button>

    <p class="label-settings">Username</p>
    <input class="input-settings" type="text" placeholder="Username/E-mail"/>
    <button class="save-settings">Save</button>

    <p class="label-settings">E-mail</p>
    <input class="input-settings" type="password" placeholder="Password"/>
    <button class="save-settings">Save</button>

    <p class="label-settings">Old password</p>
    <input class="input-settings" type="password" placeholder="Password"/>

    <p class="label-settings">New password</p>
    <input class="input-settings" type="password" placeholder="Password"/>
    <button class="save-settings">Save</button>
</div>